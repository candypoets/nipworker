{
  "name": "@candypoets/nipworker",
  "version": "0.82.0",
  "description": "Nostr client library with worker-based architecture using Rust WASM",
  "type": "module",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./hooks": {
      "import": "./dist/hooks.js",
      "types": "./dist/hooks.d.ts"
    },
    "./utils": {
      "import": "./dist/utils.js",
      "types": "./dist/utils.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "npm-run-all --parallel build:connections build:cache build:parser build:crypto && vite build",
    "build:crates": "npm-run-all --parallel build:connections build:cache build:parser build:crypto",
    "build:connections": "wasm-pack build ./src/connections --release --target web",
    "build:cache": "wasm-pack build ./src/cache --release --target web",
    "build:parser": "wasm-pack build ./src/parser --release --target web",
    "build:crypto": "wasm-pack build ./src/crypto --release --target web",
    "flatc": "npm run flatc:rust && npm run flatc:ts",
    "flatc:rust": "flatc --rust --gen-object-api --gen-all --filename-suffix '' -o ./src/shared/src/generated ./schemas/message.fbs",
    "flatc:ts": "flatc --ts --gen-object-api --gen-all --filename-suffix '' -o ./src/generated ./schemas/message.fbs && node ./scripts/patch-strings.js",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "publish": "npm publish --access public",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "nostr",
    "protocol",
    "web-worker",
    "wasm",
    "rust"
  ],
  "author": "So Tachi <sotachi@proton.me>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/candypoets/nipworker.git",
    "directory": "packages/nipworker"
  },
  "bugs": {
    "url": "https://github.com/candypoets/nipworker/issues"
  },
  "homepage": "https://github.com/candypoets/nipworker#readme",
  "peerDependencies": {
    "flatbuffers": "^25.2.10"
  },
  "devDependencies": {
    "@types/node": "^20.19.17",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.0.0",
    "vite-plugin-static-copy": "^3.1.1",
    "vite-plugin-top-level-await": "^1.6.0",
    "vite-plugin-wasm": "^3.0.0"
  },
  "dependencies": {
    "nostr-tools": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
